{
  "name": "ponswarp",
  "private": true,
  "version": "1.1.3",
  "type": "module",
  "scripts": {
    "build:wasm": "wasm-pack build ../pons-core-wasm --target web --out-dir ../ponswarp-desktop/lib/wasm --release",
    "predev": "node -e \"const fs=require('fs'); if(fs.existsSync('../pons-core-wasm')){try{require('child_process').execSync('npm run build:wasm',{stdio:'inherit'})}catch(e){process.exit(1)}}else{console.log('[INFO] pons-core-wasm source not found, skipping WASM build.')}\"",
    "prebuild": "node -e \"const fs=require('fs'); if(fs.existsSync('../pons-core-wasm') && !process.env.CI){try{require('child_process').execSync('npm run build:wasm',{stdio:'inherit'})}catch(e){process.exit(1)}}else{console.log('[INFO] Skipping WASM build.')}\"",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.0",
    "@react-three/postprocessing": "^3.0.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "buffer": "^6.0.3",
    "fflate": "^0.8.2",
    "framer-motion": "^12.23.24",
    "idb-keyval": "^6.2.2",
    "lucide-react": "^0.555.0",
    "pons-core-wasm": "./lib/wasm",
    "process": "^0.11.10",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.0",
    "simple-peer": "^9.11.1",
    "streamsaver": "^2.0.6",
    "three": "^0.181.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@types/events": "^3.0.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/streamsaver": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fast-check": "^4.3.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
