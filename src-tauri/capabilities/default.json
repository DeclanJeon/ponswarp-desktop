{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables default permissions for native desktop file operations",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:event:default",
    "core:window:allow-close",
    "core:window:allow-maximize",
    "core:window:allow-minimize",
    "core:window:allow-start-dragging",
    "core:window:allow-toggle-maximize",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-stat",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-copy-file",
    "fs:allow-rename",
    "shell:allow-open",
    "notification:default",
    "shell:default",
    {
      "identifier": "core:app:default",
      "allow": [
        "start_quic_server",
        "stop_quic_server",
        "start_discovery",
        "stop_discovery",
        "get_discovered_peers",
        "send_file_to_peer",
        "send_file_to_accepted_peer",
        "receive_file_from_peer",
        "open_file_dialog",
        "get_file_metadata",
        "scan_folder",
        "resolve_path",
        "ensure_dir_exists",
        "start_native_file_stream",
        "write_native_file_chunk",
        "close_native_file_stream",
        "connect_to_peer",
        "disconnect_peer",
        "get_accepted_peers",
        "get_file_transfer_state",
        "send_file_multistream",
        "receive_file_multistream",
        "get_io_engine_info",
        "get_grid_info",
        "create_grid_metadata",
        "connect_bootstrap_node",
        "set_bootstrap_nodes",
        "discover_bootstrap_nodes",
        "get_network_interfaces",
        "start_embedded_bootstrap",
        "stop_embedded_bootstrap",
        "get_embedded_bootstrap_status",
        "update_bootstrap_config",
        "start_file_stream",
        "write_file_chunk",
        "complete_file_stream",
        "create_save_dialog",
        "select_save_directory",
        "check_storage_space",
        "start_udp_transfer",
        "get_transfer_stats",
        "start_relay_engine",
        "get_relay_stats",
        "stop_relay_engine",
        "send_signaling_message",
        "handle_signaling_message",
        "ping_quic",
        "get_runtime_info"
      ]
    }
  ]
}
